<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gdm.forma.inventory.frontend.components.product.AddOrEditController"
            styleClass="body">
    <children>
        <VBox AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="25.0"
              AnchorPane.leftAnchor="175.0" AnchorPane.rightAnchor="175.0"
              styleClass="container">
            <Label styleClass="label-title"
                   fx:id="labelTitle"
                   wrapText="true">
            </Label>
            <!--            <Label styleClass="label-title"-->
            <!--                   fx:id="labelSubtitle">-->
            <!--            </Label>-->
            <HBox styleClass="h-box-product-details">
                <Label text="         Nume Produs: ">
                </Label>
                <TextField promptText="Nume Produs"
                           fx:id="textFieldProductName">
                </TextField>
            </HBox>
            <HBox styleClass="h-box-product-details">
                <Label text="                         Stoc: " >
                </Label>
                <TextField promptText="Stoc"
                           fx:id="textFieldStockInSalon">
                </TextField>
            </HBox>
            <HBox styleClass="h-box-product-details">
                <Label text="Stoc necesar: ">
                </Label>
                <TextField promptText="Stoc necesar"
                           fx:id="textFieldStockPerWeek">
                </TextField>
            </HBox>
        </VBox>
        <HBox styleClass="h-box-page-options"
              AnchorPane.topAnchor="260.0"
              AnchorPane.rightAnchor="50.0">
            <Button fx:id="buttonSaveOrUpdate">
            </Button>
            <Button fx:id="buttonCancelAndGoBack"
                    text="Cancel">
            </Button>
        </HBox>
    </children>
</AnchorPane>
